<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE plist PUBLIC "-//Apple//DTD PLIST 1.0//EN" "http://www.apple.com/DTDs/PropertyList-1.0.dtd">
<plist version="1.0">
<dict>
	<key>CFBundleDevelopmentRegion</key>
	<string>$(DEVELOPMENT_LANGUAGE)</string>
	<key>CFBundleDisplayName</key>
	<string>Dinor App - Votre chef de poche</string>
	<key>CFBundleExecutable</key>
	<string>$(EXECUTABLE_NAME)</string>
	<key>CFBundleIdentifier</key>
	<string>$(PRODUCT_BUNDLE_IDENTIFIER)</string>
	<key>CFBundleInfoDictionaryVersion</key>
	<string>6.0</string>
	<key>CFBundleName</key>
	<string>Dinor App - Votre chef de poche</string>
	<key>CFBundlePackageType</key>
	<string>APPL</string>
	<key>CFBundleShortVersionString</key>
	<string>$(FLUTTER_BUILD_NAME)</string>
	<key>CFBundleSignature</key>
	<string>????</string>
	<key>CFBundleVersion</key>
	<string>$(FLUTTER_BUILD_NUMBER)</string>
	<key>LSRequiresIPhoneOS</key>
	<true/>
	<key>UILaunchStoryboardName</key>
	<string>LaunchScreen</string>
	<key>UIMainStoryboardFile</key>
	<string>Main</string>
	<key>UISupportedInterfaceOrientations</key>
	<array>
		<string>UIInterfaceOrientationPortrait</string>
		<string>UIInterfaceOrientationLandscapeLeft</string>
		<string>UIInterfaceOrientationLandscapeRight</string>
	</array>
	<key>UISupportedInterfaceOrientations~ipad</key>
	<array>
		<string>UIInterfaceOrientationPortrait</string>
		<string>UIInterfaceOrientationPortraitUpsideDown</string>
		<string>UIInterfaceOrientationLandscapeLeft</string>
		<string>UIInterfaceOrientationLandscapeRight</string>
	</array>
	<key>CADisableMinimumFrameDurationOnPhone</key>
	<true/>
	<key>UIApplicationSupportsIndirectInputEvents</key>
	<true/>
	
	<!-- Permissions et descriptions d'usage -->
	<key>NSCameraUsageDescription</key>
	<string>Dinor a besoin d'accéder à votre caméra pour prendre des photos de vos plats et créations culinaires.</string>
	
	<key>NSPhotoLibraryUsageDescription</key>
	<string>Dinor a besoin d'accéder à vos photos pour vous permettre de partager vos créations culinaires.</string>
	
	<key>NSLocationWhenInUseUsageDescription</key>
	<string>Dinor utilise votre localisation pour vous suggérer des restaurants et événements culinaires près de chez vous.</string>
	
	<key>NSLocationAlwaysAndWhenInUseUsageDescription</key>
	<string>Dinor utilise votre localisation pour vous suggérer des restaurants et événements culinaires près de chez vous.</string>
	
	<key>NSMicrophoneUsageDescription</key>
	<string>Dinor a besoin d'accéder au microphone pour enregistrer des vidéos de vos créations culinaires.</string>
	
	<!-- Configuration réseau : accès autorisé à TOUS les domaines -->
	<key>NSAppTransportSecurity</key>
	<dict>
		<key>NSAllowsArbitraryLoads</key>
		<true/>
		<key>NSAllowsArbitraryLoadsInWebContent</key>
		<true/>
		<key>NSAllowsLocalNetworking</key>
		<true/>
	</dict>
	
	<!-- URL Schemes supportés -->
	<key>CFBundleURLTypes</key>
	<array>
		<dict>
			<key>CFBundleURLName</key>
			<string>com.dinorapp.mobile</string>
			<key>CFBundleURLSchemes</key>
			<array>
				<string>dinor</string>
				<string>https</string>
				<string>http</string>
			</array>
		</dict>
	</array>
	
	<!-- Applications queries pour iOS (équivalent aux queries Android) -->
	<key>LSApplicationQueriesSchemes</key>
	<array>
		<string>youtube</string>
		<string>youtube-music</string>
		<string>facebook</string>
		<string>twitter</string>
		<string>instagram</string>
		<string>whatsapp</string>
		<string>telegram</string>
		<string>mailto</string>
		<string>sms</string>
		<string>tel</string>
		<string>maps</string>
		<string>googlemaps</string>
		<string>waze</string>
	</array>
</dict>
</plist>
